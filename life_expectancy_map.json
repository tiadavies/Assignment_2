{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "background": "whitesmoke",
  "title": {
    "text": "Life Expectancy (2000â€“2010)",
    "font": "Playfair Display",
    "fontSize": 16,
    "fontWeight": 600,
    "color": "#1b5e20",
    "anchor": "middle"
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "year_slider",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2010,
        "step": 10,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "lightblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "darkgray" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tiadavies/Assignment_2/main/merged_data.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "filter": "datum.Year == year_slider" },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
              "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "darkgray" },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Life_expectancy",
          "type": "quantitative",
          "scale": { "scheme": "purples", "domain": [0, 90] },
          "title": "Life Expectancy (years)",
          "legend": {
            "titleFont": "Open Sans",
            "labelFont": "Open Sans",
            "titleFontSize": 10,
            "labelFontSize": 9,
            "titleColor": "#1b5e20",
            "labelColor": "#37474f",
            "symbolSize": 60
          }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          { "field": "Life_expectancy", "type": "quantitative", "title": "Life Expectancy" },
          { "field": "Year", "type": "ordinal", "title": "Year" }
        ]
      }
    }
  ],
  "config": {
    "font": "Open Sans",
    "view": { "stroke": "transparent" },
    "axis": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "labelFontSize": 11,
      "titleFontSize": 13,
      "labelColor": "#37474f",
      "titleColor": "#1b5e20",
      "gridColor": "#e0e0e0",
      "domainColor": "#bdbdbd"
    },
    "legend": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "labelFontSize": 9,
      "titleFontSize": 10,
      "titleColor": "#1b5e20",
      "labelColor": "#37474f",
      "orient": "right",
      "symbolSize": 60
    },
    "title": {
      "font": "Open Sans",
      "fontSize": 16,
      "fontWeight": 600,
      "color": "#1b5e20",
      "anchor": "middle"
    }
  }
}
